<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>forum_discussion</display-name>
  
   <servlet>
  	<servlet-name>TestConnection</servlet-name>
  	<servlet-class>servlets.TestConnection</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>AffichageCategorie</servlet-name>
  	<servlet-class>servlets.AfficherCategorie</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>AffichageTopic</servlet-name>
  	<servlet-class>servlets.AfficherTopic</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>AffichagePost</servlet-name>
  	<servlet-class>servlets.AfficherPost</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>afficherTopic</servlet-name>
  	<servlet-class>servlets.affichageTopic</servlet-class>
  </servlet>
  
  <!-- URL mapping -->
  <servlet-mapping>
  	<servlet-name>afficherTopic</servlet-name>
  	<url-pattern>/post</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>AffichageCategorie</servlet-name>
  	<url-pattern>/cats</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>AffichageTopic</servlet-name>
  	<url-pattern>/topics</url-pattern>
  </servlet-mapping>
</web-app>